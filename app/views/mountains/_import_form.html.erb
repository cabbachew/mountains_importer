<%= form_with url: import_mountains_path, method: :post do |f| %>
  <div class="container">
    <div class="d-flex justify-content-end">
      <%= f.file_field :file, accept: ".csv" %>
      <div class="btn-group">
        <%= f.submit "Upload Mountains", class: "btn btn-primary" %>
        <%= link_to "Clear Mountains", clear_mountains_path, class: "btn btn-danger", 
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </div>
    </div>
  </div>
<% end %>